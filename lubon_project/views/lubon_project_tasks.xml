<?xml version="1.0" encoding="UTF-8"?>
 <openerp>
    <data>
        <!-- Add instructor field to existing view -->
        <record model="ir.ui.view" id="lubon_project_task_form">
            <field name="name">lubon_project.task_form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
            	<xpath expr="//group/field[@name='partner_id']" position="replace"/>
            	<field name="date_deadline" position="before">
            		<field name="partner_id"/>
            		<field name="contact_person_id" domain="[('parent_id','=',partner_id)]"/>
            		<field name="contact_person_phone" readonly="0" widget="phone"/>
            		<field name="contact_person_mobile" readonly="0" widget="phone"/>
            	</field>
            </field>
        </record>
    </data>
</openerp>