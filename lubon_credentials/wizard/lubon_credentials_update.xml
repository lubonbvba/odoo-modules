<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="update_credentials_form" model="ir.ui.view">
			<field name="name">Update Credentials</field>
			<field name="model">lubon_credentials.update</field>
			<field name="arch" type="xml">
				<form string="Update Password">
					<group>
						<field name="password"/>
					</group>
					<footer>
	                    <button name="update_credentials" type="object" class="oe_highlight" string="Update"/>
	                     or 
						<button string="Cancel" class="oe_link" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

		<act_window id="action_update_credentials"
				    name="Update Credentials"
				    res_model="lubon_credentials.update"
				    view_mode="form"
				    target="new"/>

	</data>
</openerp>
